
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<form method="post" asp-action="login">
    <table>
        <tr>
            <td>Email</td>
            <td>: <input name="email" type="text" /></td>
        </tr>
        <tr>
            <td>Password</td>
            <td>: <input name="password" type="password" /></td>
        </tr>
        <tr>
            <td><button type="submit">Login</button></td>
        </tr>
    </table>
</form>