@model IEnumerable<WebApp.Models.Department>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Index";
}

<div class="p-4 card">
    <h1>Index</h1>

    <p>
        <a asp-action="Create" id="addNew" onclick="AddNew()" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addNewModal">Add New</a>
    </p>
    <table class="table" id="tableDepartment">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Division</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

    <!-- Modal -->
    <div class="modal fade" id="getIdModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="getdetail">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addNewModal" tabindex="-1" aria-labelledby="exampleModalLabel1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel1">Add New</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <form class="m-t-10">
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label class="form-group-float-table is-visible">Name</label>
                                    <input type="text" id="input-name-department" name="name" class="form-control"
                                           placeholder="Name" data-toggle="tooltip"
                                           data-placement="bottom" title="Name" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-group-float-table is-visible">Division Id</label>
                                    <input type="number" id="input-divisionid-department" name="divisionId" class="form-control"
                                           placeholder="Division Id" data-toggle="tooltip"
                                           data-placement="bottom" title="divisionId" />
                                </div>
                            </div>
                            <div id="btn-addnew-department"></div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel2" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <div id="nm-delete-department"></div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <div id="btn-delete-department"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="exampleModalLabel3" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel3">Edit</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <form class="m-t-10">
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label class="form-group-float-table is-visible">Name</label>
                                    <input type="text" name="name" class="form-control"
                                           placeholder="Name" data-toggle="tooltip"
                                           data-placement="bottom" title="Name" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-group-float-table is-visible">Division Id</label>
                                    <input type="number" name="divisionId" class="form-control"
                                           placeholder="Division Id" data-toggle="tooltip"
                                           data-placement="bottom" title="divisionId" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <div id="btn-edit-department"></div>
                </div>
            </div>
        </div>
    </div>
</div>