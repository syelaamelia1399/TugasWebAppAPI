@model WebApp.ViewModel.DepartmentListViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Departement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control mb-3" />
                <span asp-validation-for="Name" class="text-danger mb-3"></span>

                <label asp-for="DivisionId" class="control-label"></label>
                <select class="form-select" aria-label="Default select example" asp-for="DivisionId"
                        asp-items="@Model.Divisions">
                    <option selected>Open this select Menu</option>
                    @*<option value="1">Customer Relationship</option>
                        <option value="2">Human Resource</option>
                        <option value="3">Division Developer Engineer</option>*@
                </select>
                <span asp-validation-for="DivisionId" class="text-danger mb-3"></span>
            </div>
            <div class="form-group mt-3 mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@(new SelectList(Model.Divisions, nameof(Division.Id), nameof(Division.Name)))
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}